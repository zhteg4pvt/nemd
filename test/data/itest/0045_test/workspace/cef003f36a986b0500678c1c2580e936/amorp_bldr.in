units real
atom_style full
bond_style harmonic
angle_style harmonic
dihedral_style opls
improper_style cvff
special_bonds lj/coul 0 0 0.5
pair_style lj/cut 11.0
pair_modify mix geometric
read_data amorp_bldr.data

dump 1 all custom 1000 amorp_bldr.custom.gz id xu yu zu
dump_modify 1 sort id
min_style fire
minimize 1.0e-6 1.0e-8 1000000 10000000

timestep 1.0
thermo_modify flush yes
thermo 1000
velocity all create 10 1678902044
fix 2a all temp/berendsen 10 10 100
fix 2b all nve
run 100
unfix 2b
unfix 2a

fix 3a all temp/berendsen 10 300 100
fix 3b all nve
run 5000
unfix 3b
unfix 3a

fix 4a all temp/berendsen 300 300 100
fix 4b all nve
run 5000
unfix 4b
unfix 4a

dump_modify 1 every 4000

variable vol equal vol
variable amp equal 0.01*v_vol^(1/3)
variable immed_press python getPress
python getPress input 1 press_vol.data return v_immed_press format sf here "from nemd.lmpfunc import getPress"

variable immed_modulus python getModulus
python getModulus input 2 press_vol.data 100 return v_immed_modulus format sif here "from nemd.lmpfunc import getModulus"

variable factor python getBdryFactor
python getBdryFactor input 2 1 press_vol.data return v_factor format fsf here "from nemd.lmpfunc import getBdryFactor"

variable defm_id loop 0 999 pad
label defm_start
print "defm_id = ${defm_id}"
shell mkdir defm_${defm_id}
shell cd defm_${defm_id}

fix 17a all ave/time 1 10 10 c_thermo_press v_vol file press_vol.data
fix 17b all deform 100 x wiggle ${amp} 1000 y wiggle ${amp} 1000 z wiggle ${amp} 1000
fix 17c all temp/berendsen 300 300 100
fix 17d all nve
run 3000
unfix 17d
unfix 17c
unfix 17b
unfix 17a

print "immed_press = ${immed_press}"
print "immed_modulus = ${immed_modulus}"
print "factor = ${factor}"
if "${defm_id} == 999 || ${factor} == 1" then "jump SELF defm_break"

fix 23a all deform 100 x scale ${factor} y scale ${factor} z scale ${factor} remap v
fix 23b all temp/berendsen 300 300 100
fix 23c all nve
run 500
unfix 23c
unfix 23b
unfix 23a

fix 24a all temp/berendsen 300 300 100
fix 24b all nve
run 500
unfix 24b
unfix 24a

shell cd ..
next defm_id
jump SELF defm_start

label defm_break
variable modulus equal ${immed_modulus}
variable press equal ${immed_press}
shell cd ..
variable vol delete
variable amp delete
variable immed_press delete
variable immed_modulus delete
variable factor delete
variable defm_id delete

dump_modify 1 every 1000

fix 40a all temp/berendsen 300 300 100
fix 40b all nve
run 10000
unfix 40b
unfix 40a

fix 41a all press/berendsen iso ${press} 1 1000 modulus ${modulus}
fix 41b all temp/berendsen 300 300 100
fix 41c all nve
run 10000
unfix 41c
unfix 41b
unfix 41a


variable xl equal "xhi - xlo"
variable yl equal "yhi - ylo"
variable zl equal "zhi - zlo"
fix 42a all ave/time 1 1000 1000 v_xl v_yl v_zl file xyzl.data
fix 42b all press/berendsen iso 1.0 1 1000 modulus ${modulus}
fix 42c all temp/berendsen 300 300 100
fix 42d all nve
run 100000
unfix 42d
unfix 42c
unfix 42b
unfix 42a


print "Final Boundary: xl = ${xl}, yl = ${yl}, zl = ${zl}"
variable ave_xl python getXL
python getXL input 1 xyzl.data return v_ave_xl format sf here "from nemd.lmpfunc import getXL"
variable ave_yl python getYL
python getYL input 1 xyzl.data return v_ave_yl format sf here "from nemd.lmpfunc import getYL"
variable ave_zl python getZL
python getZL input 1 xyzl.data return v_ave_zl format sf here "from nemd.lmpfunc import getZL"
print "Averaged  xl = ${ave_xl} yl = ${ave_yl} zl = ${ave_zl}"

variable ave_xr equal "v_ave_xl / v_xl"
variable ave_yr equal "v_ave_yl / v_yl"
variable ave_zr equal "v_ave_zl / v_zl"
change_box all x scale ${ave_xr} y scale ${ave_yr} z scale ${ave_zr} remap
variable ave_xr delete
variable ave_yr delete
variable ave_zr delete
variable ave_xl delete
variable ave_yl delete
variable ave_zl delete
variable xl delete
variable yl delete
variable zl delete

fix 44a all temp/berendsen 300 300 100
fix 44b all nve
run 1000
unfix 44b
unfix 44a

fix 45a all temp/berendsen 300 300 100
fix 45b all nve
run 10000
unfix 45b
unfix 45a

quit 0
