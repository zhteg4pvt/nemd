echo "0001: Amorphous builder on large number of [Ar] via grid method"
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 500000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_500000 -CPU 8 > /dev/null
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 1000000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_1000000 -CPU 8 > /dev/null
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 2000000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_2000000 -CPU 8 > /dev/null
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 4000000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_4000000 -CPU 8 > /dev/null
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 8000000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_8000000 -CPU 8 > /dev/null
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 10000000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_10000000 -CPU 8 > /dev/null
INTVL=1 nemd_run amorp_bldr_driver.py "[Ar]" -method grid -mol_num 20000000 -seed 1 -NAME Gridded_Ar_Molecules -JOBNAME Gridded_Ar_Molecules_20000000 -CPU 8 > /dev/null
exit 0